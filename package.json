{
  "name": "loft_app",
  "version": "1.0.0",
  "main": "src/main.js",
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack-dev-server",
    "electron": "electron .",
    "dev": "nf start -p 9000",
    "build": "webpack",
    "clean": "rm -rf build dist",
    "package": "electron-builder build --mac -c.extraMetadata.main=./build/src/main.js --publish never",
    "build-electron": "mkdir ./build/src && mkdir ./build/src/loading && cp ./src/screens/loading/loading.html ./src/screens/loading/trckshot.gif ./build/src/loading/ && cp ./src/main.js ./build/src/ && cp -r ./src/main ./src/store ./src/renderer ./src/config ./src/utils ./src/services ./src/electron_redux ./build/src/",
    "postinstall": "electron-builder install-app-deps",
    "packageApp": "yarn clean && yarn build && yarn build-electron && yarn package"
  },
  "build": {
    "appId": "com.electron.loft",
    "productName": "Lofty Logistics",
    "copyright": "Copyright Â© 2020 Rohit Tatu",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "axios": "^0.19.0",
    "cogo-toast": "^4.2.3",
    "debug": "^4.1.1",
    "electron-redux": "^1.4.0",
    "flux-standard-action": "^2.1.1",
    "formik": "^1.5.8",
    "keytar": "^5.0.0",
    "node-fetch": "^2.6.1",
    "node-sass": "^4.12.0",
    "papaparse": "^5.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-geosuggest": "^2.12.0",
    "react-google-maps": "^9.4.5",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-regenerator": "^7.4.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.1.0",
    "devtron": "^1.4.0",
    "dotenv": "^8.0.0",
    "electron": "^9.4.0",
    "electron-builder": "^22.6.0",
    "electron-rebuild": "^1.8.8",
    "file-loader": "^4.1.0",
    "foreman": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "node-loader": "^0.6.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
